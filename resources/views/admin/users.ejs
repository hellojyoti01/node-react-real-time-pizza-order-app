<section class="orders light-section">
  <div class="container mx-auto pt-12">
    <h1 class="font-bold text-lg mb-4">All Users</h1>
    <table class="w-full table-auto bg-white">
      <thead>
        <tr>
          <th class="border px-4 py-2 text-left">#</th>
          <th class="border px-4 py-2 text-left">Name</th>
          <th class="border px-4 py-2 text-left">Email</th>
          <th class="border px-4 py-2 text-left">Role</th>
          <th class="border px-4 py-2 text-left">Status</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index)=>{%>
        <tr>
          <td class="border px-4 py-2"><%= index %></td>
          <td class="border px-4 py-2"><%= user.name %></td>
          <td class="border px-4 py-2"><%= user.email %></td>
          <td class="border px-4 py-2"><%= user.role %></td>
          <td class="border px-4 py-2">
            <% if(user.active) {%>
            <a
              class="bg-blue-600 font-bold px-2 rounded hover:bg-blue-800 transition duration-300 text-white py-1 cursor-pointer"
              href="/admin/users/<%= user.id %>/blocked"
            >
              Active
            </a>
            <% }else{ %>
            <a
              class="bg-red-600 font-bold px-2 rounded hover:bg-red-800 transition duration-300 text-white py-1 cursor-pointer"
              href="/admin/users/<%= user.id %>/active"
            >
              Blocked
            </a>
            <% } %>
          </td>
        </tr>
        <% })%>
      </tbody>
    </table>
  </div>
</section>
